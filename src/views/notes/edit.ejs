<%- include('../partials/header') %>
<div class="max-w-xl mx-auto mt-6 bg-white p-6 rounded shadow">
  <h1 class="text-xl mb-4 font-bold">Edit Note</h1>
  <form action="/notes/edit/<%= note.id %>" method="POST">
    <input type="text" name="title" value="<%= note.title %>" class="w-full border p-2 mb-3" required>
    <textarea name="content" class="w-full border p-2 mb-3" rows="5" required><%= note.content %></textarea>
    <button class="bg-blue-500 text-white px-4 py-2 rounded">Update</button>
  </form>
</div>
