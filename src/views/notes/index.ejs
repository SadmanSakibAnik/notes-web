<%- include('../partials/header') %>
<div class="max-w-4xl mx-auto mt-6">
  <div class="flex justify-between items-center mb-4">
    <h1 class="text-2xl font-bold">Your Notes</h1>
    <a href="/notes/new" class="bg-blue-500 text-white px-4 py-2 rounded">+ New Note</a>
  </div>
  <% if (notes.length === 0) { %>
    <p>No notes yet.</p>
  <% } else { %>
    <ul>
      <% notes.forEach(note => { %>
        <li class="bg-white p-4 rounded shadow mb-3">
          <h2 class="text-xl font-semibold"><%= note.title %></h2>
          <p class="text-gray-600"><%= note.content %></p>
          <div class="mt-2 space-x-2">
            <a href="/notes/edit/<%= note.id %>" class="text-blue-500">Edit</a>
            <a href="/notes/delete/<%= note.id %>" class="text-red-500">Delete</a>
          </div>
        </li>
      <% }) %>
    </ul>
  <% } %>
  <a href="/notes/deleted" class="text-sm text-gray-600 block mt-4">View Deleted Notes</a>
</div>
