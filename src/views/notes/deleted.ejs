<%- include('../partials/header') %>
<div class="max-w-4xl mx-auto mt-6">
  <h1 class="text-2xl font-bold mb-4">Deleted Notes</h1>
  <% if (notes.length === 0) { %>
    <p>No deleted notes.</p>
  <% } else { %>
    <ul>
      <% notes.forEach(note => { %>
        <li class="bg-white p-4 rounded shadow mb-3">
          <h2 class="text-xl font-semibold"><%= note.title %></h2>
          <p class="text-gray-600"><%= note.content %></p>
          <div class="mt-2">
            <a href="/notes/restore/<%= note.id %>" class="text-green-500">Restore</a>
          </div>
        </li>
      <% }) %>
    </ul>
  <% } %>
</div>
